# Database
DATABASE_URL=postgresql://user:password@localhost:5432/skrynia_db

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Admin credentials (for initial setup)
ADMIN_EMAIL=admin@skrynia.com
ADMIN_PASSWORD=change-this-password

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Przelewy24
P24_MERCHANT_ID=your_merchant_id
P24_POS_ID=your_pos_id
P24_CRC=your_crc_key
P24_API_KEY=your_api_key
P24_TEST_MODE=True

# Email (SMTP)
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@skrynia.com
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_FROM_NAME=Скриня Пані Дарії
MAIL_STARTTLS=True
MAIL_SSL_TLS=False

# Redis & Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# File Upload
UPLOAD_DIR=static/uploads
MAX_FILE_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,webp,avif

# App Settings
APP_NAME=Skrynia Pani Darii API
APP_VERSION=1.0.0
DEBUG=True
